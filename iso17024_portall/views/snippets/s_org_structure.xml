<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========== SNIPPET TEMPLATE: Organization Structure ========== -->
    <template id="s_org_structure" name="Organization Structure">
        <section class="s_org_structure pt-5 pb-5" style="background-color: #f6f6f8;">
            <div class="container">
                <!-- Section Header -->
                <div class="text-center mb-5">
                    <span class="o_small_text text-primary fw-bold text-uppercase" style="letter-spacing: 2px; font-size: 0.75rem;">Kepemimpinan</span>
                    <h2 class="mt-2 mb-3 fw-bold" style="font-size: 2.5rem;">Struktur Organisasi</h2>
                    <p class="text-muted mx-auto" style="max-width: 600px;">
                        Mengenal tim profesional di balik standar sertifikasi coating inspector yang terpercaya dan berintegritas.
                    </p>
                </div>
                
                <!-- Org Chart Container -->
                <div class="org-chart-container position-relative">
                    
                    <!-- Level 1: Director -->
                    <div class="d-flex justify-content-center mb-4 position-relative">
                        <div class="org-card-director bg-white rounded-4 shadow p-4 text-center position-relative" style="max-width: 320px; border-top: 4px solid #1152d4;">
                            <!-- Connector Line Down -->
                            <div class="org-connector-down d-none d-md-block"></div>
                            
                            <div class="mx-auto mb-3 rounded-circle overflow-hidden" style="width: 100px; height: 100px; border: 3px solid rgba(17, 82, 212, 0.2); padding: 4px; background: rgba(17, 82, 212, 0.05);">
                                <img src="/web/image/website/1/logo" class="img-fluid rounded-circle w-100 h-100 o_editable_media" style="object-fit: cover;" alt="Director Photo" data-original-title="Director" loading="lazy"/>
                            </div>
                            <span class="text-primary fw-bold text-uppercase" style="font-size: 0.7rem; letter-spacing: 1px;">Pimpinan Eksekutif</span>
                            <h4 class="fw-bold mt-1 mb-1" style="color: #1e293b;">Diki Nasution</h4>
                            <p class="text-muted mb-0" style="font-size: 0.9rem;">Direktur Utama</p>
                        </div>
                    </div>
                    
                    <!-- Horizontal Connector Line -->
                    <div class="org-horizontal-line d-none d-md-block mx-auto" style="width: 66%; height: 2px; background: #cbd5e1; margin-top: -1rem; margin-bottom: 2rem;"></div>
                    
                    <!-- Level 2: Managers Grid -->
                    <div class="row justify-content-center g-4 position-relative">
                        
                        <!-- Manager 1 -->
                        <div class="col-12 col-md-4">
                            <div class="org-card-manager bg-white rounded-3 shadow-sm p-4 h-100 position-relative" style="border-left: 4px solid rgba(17, 82, 212, 0.6);">
                                <!-- Connector Line Up -->
                                <div class="org-connector-up d-none d-md-block"></div>
                                
                                <div class="d-flex align-items-center gap-3 mb-3">
                                    <div class="rounded-circle overflow-hidden flex-shrink-0" style="width: 56px; height: 56px; background: #f1f5f9;">
                                        <img src="/web/image/website/1/logo" class="img-fluid w-100 h-100 o_editable_media" style="object-fit: cover;" alt="Manager 1 Photo" loading="lazy"/>
                                    </div>
                                    <div>
                                        <span class="text-primary fw-semibold text-uppercase" style="font-size: 0.65rem; letter-spacing: 1px;">Manajemen</span>
                                        <h5 class="fw-bold mb-0" style="color: #1e293b; font-size: 1.1rem;">Manajer LSP</h5>
                                        <p class="text-muted mb-0" style="font-size: 0.85rem;">Budi Santoso</p>
                                    </div>
                                </div>
                                <div class="pt-3 border-top d-flex justify-content-between align-items-center">
                                    <span class="text-muted" style="font-size: 0.75rem;">Divisi Operasional</span>
                                    <i class="fa fa-arrow-right text-muted"></i>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Manager 2 -->
                        <div class="col-12 col-md-4">
                            <div class="org-card-manager bg-white rounded-3 shadow-sm p-4 h-100 position-relative" style="border-left: 4px solid rgba(17, 82, 212, 0.6);">
                                <!-- Connector Line Up -->
                                <div class="org-connector-up d-none d-md-block"></div>
                                
                                <div class="d-flex align-items-center gap-3 mb-3">
                                    <div class="rounded-circle overflow-hidden flex-shrink-0" style="width: 56px; height: 56px; background: #f1f5f9;">
                                        <img src="/web/image/website/1/logo" class="img-fluid w-100 h-100 o_editable_media" style="object-fit: cover;" alt="Manager 2 Photo" loading="lazy"/>
                                    </div>
                                    <div>
                                        <span class="text-primary fw-semibold text-uppercase" style="font-size: 0.65rem; letter-spacing: 1px;">Administrasi</span>
                                        <h5 class="fw-bold mb-0" style="color: #1e293b; font-size: 1.1rem;">Manajer Admin</h5>
                                        <p class="text-muted mb-0" style="font-size: 0.85rem;">Siti Rahmawati</p>
                                    </div>
                                </div>
                                <div class="pt-3 border-top d-flex justify-content-between align-items-center">
                                    <span class="text-muted" style="font-size: 0.75rem;">Divisi Keuangan &amp; Umum</span>
                                    <i class="fa fa-arrow-right text-muted"></i>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Manager 3 -->
                        <div class="col-12 col-md-4">
                            <div class="org-card-manager bg-white rounded-3 shadow-sm p-4 h-100 position-relative" style="border-left: 4px solid rgba(17, 82, 212, 0.6);">
                                <!-- Connector Line Up -->
                                <div class="org-connector-up d-none d-md-block"></div>
                                
                                <div class="d-flex align-items-center gap-3 mb-3">
                                    <div class="rounded-circle overflow-hidden flex-shrink-0" style="width: 56px; height: 56px; background: #f1f5f9;">
                                        <img src="/web/image/website/1/logo" class="img-fluid w-100 h-100 o_editable_media" style="object-fit: cover;" alt="Manager 3 Photo" loading="lazy"/>
                                    </div>
                                    <div>
                                        <span class="text-primary fw-semibold text-uppercase" style="font-size: 0.65rem; letter-spacing: 1px;">Mutu</span>
                                        <h5 class="fw-bold mb-0" style="color: #1e293b; font-size: 1.1rem;">Manajer Mutu</h5>
                                        <p class="text-muted mb-0" style="font-size: 0.85rem;">Ahmad Fauzi</p>
                                    </div>
                                </div>
                                <div class="pt-3 border-top d-flex justify-content-between align-items-center">
                                    <span class="text-muted" style="font-size: 0.75rem;">Divisi Penjaminan Mutu</span>
                                    <i class="fa fa-arrow-right text-muted"></i>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                    
                </div>
                
                <!-- Footer Note -->
                <div class="text-center mt-5 pt-4 border-top">
                    <p class="text-muted mb-0" style="font-size: 0.9rem;">
                        Struktur organisasi ini diperbarui per <span class="fw-semibold" style="color: #475569;">Oktober 2023</span>.
                        Untuk informasi lebih lanjut, silakan hubungi bagian administrasi.
                    </p>
                </div>
                
            </div>
        </section>
    </template>
    
    <!-- ========== REGISTER SNIPPET TO WEBSITE BUILDER ========== -->
    <template id="org_structure_snippet" inherit_id="website.snippets" name="Organization Structure Snippet">
        <xpath expr="//snippets[@id='snippet_structure']" position="inside">
            <t t-snippet="iso17024_portall.s_org_structure" 
               t-thumbnail="/iso17024_portall/static/src/img/snippets/s_org_structure.png"/>
        </xpath>
    </template>
    
</odoo>
