<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========== SNIPPET TEMPLATE: Certification Path Selection ========== -->
    <template id="s_certification_path" name="Certification Path Selection">
        <section class="s_certification_path pt-5 pb-5" style="background-color: #f6f7f8;">
            <div class="container">
                <!-- Page Heading -->
                <div class="row justify-content-center mb-5">
                    <div class="col-lg-8 text-center">
                        <h2 class="h1 fw-bold mb-3" style="color: #1e293b;">Choose Your Certification Path</h2>
                        <p class="text-muted fs-5">
                            Select the option that best fits your current professional status to proceed with your application.
                        </p>
                    </div>
                </div>

                <!-- Selection Cards -->
                <div class="row justify-content-center g-4">
                    <!-- Card 1: New Certification -->
                    <div class="col-lg-5 col-md-6">
                        <div class="s_cert_card s_cert_card_new h-100 bg-white rounded-4 p-4 shadow-sm" style="border: 1px solid #e2e8f0;">
                            <div class="text-center mb-4">
                                <div class="s_cert_icon rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px; background-color: rgba(19, 127, 236, 0.1);">
                                    <i class="fa fa-graduation-cap fa-2x" style="color: #137fec;"></i>
                                </div>
                                <h3 class="h4 fw-bold mb-2" style="color: #1e293b;">Sertifikasi Baru</h3>
                                <p class="text-muted small mb-0">
                                    Ideal for first-time applicants ready to validate their skills and start their professional journey.
                                </p>
                            </div>
                            
                            <ul class="list-unstyled mb-4">
                                <li class="d-flex align-items-center gap-2 mb-3">
                                    <span class="rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 22px; height: 22px; background-color: #137fec;">
                                        <i class="fa fa-check text-white" style="font-size: 10px;"></i>
                                    </span>
                                    <span class="small" style="color: #334155;">Registrasi &amp; verifikasi akun</span>
                                </li>
                                <li class="d-flex align-items-center gap-2 mb-3">
                                    <span class="rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 22px; height: 22px; background-color: #137fec;">
                                        <i class="fa fa-check text-white" style="font-size: 10px;"></i>
                                    </span>
                                    <span class="small" style="color: #334155;">Pilih skema &amp; level</span>
                                </li>
                                <li class="d-flex align-items-center gap-2 mb-3">
                                    <span class="rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 22px; height: 22px; background-color: #137fec;">
                                        <i class="fa fa-check text-white" style="font-size: 10px;"></i>
                                    </span>
                                    <span class="small" style="color: #334155;">Upload dokumen persyaratan</span>
                                </li>
                                <li class="d-flex align-items-center gap-2 mb-3">
                                    <span class="rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 22px; height: 22px; background-color: #137fec;">
                                        <i class="fa fa-check text-white" style="font-size: 10px;"></i>
                                    </span>
                                    <span class="small" style="color: #334155;">Asesmen kompetensi</span>
                                </li>
                                <li class="d-flex align-items-center gap-2 mb-3">
                                    <span class="rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 22px; height: 22px; background-color: #137fec;">
                                        <i class="fa fa-check text-white" style="font-size: 10px;"></i>
                                    </span>
                                    <span class="small" style="color: #334155;">Sertifikat kompetensi</span>
                                </li>
                                <li class="d-flex align-items-center gap-2">
                                    <span class="rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 22px; height: 22px; background-color: #137fec;">
                                        <i class="fa fa-check text-white" style="font-size: 10px;"></i>
                                    </span>
                                    <span class="small" style="color: #334155;">Terdaftar di database LSP</span>
                                </li>
                            </ul>
                            
                            <a href="/pilih-level?type=new" class="btn btn-primary w-100 py-3 rounded-3 fw-bold d-flex align-items-center justify-content-center gap-2" style="background-color: #137fec; border-color: #137fec;">
                                <span>Pilih Level</span>
                                <i class="fa fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>

                    <!-- Card 2: Renewal (Resertifikasi) -->
                    <div class="col-lg-5 col-md-6">
                        <div class="s_cert_card s_cert_card_renewal h-100 bg-white rounded-4 p-4 shadow-sm" style="border: 1px solid #e2e8f0;">
                            <div class="text-center mb-4">
                                <div class="s_cert_icon rounded-circle d-inline-flex align-items-center justify-content-center mb-4" style="width: 80px; height: 80px; background-color: rgba(16, 185, 129, 0.1);">
                                    <i class="fa fa-refresh fa-2x" style="color: #10b981;"></i>
                                </div>
                                <h3 class="h4 fw-bold mb-2" style="color: #1e293b;">Perpanjangan Sertifikat</h3>
                                <p class="text-muted small mb-0">
                                    For existing professionals looking to renew their credentials and maintain active status.
                                </p>
                            </div>
                            
                            <ul class="list-unstyled mb-4">
                                <li class="d-flex align-items-center gap-2 mb-3">
                                    <span class="rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 22px; height: 22px; background-color: #10b981;">
                                        <i class="fa fa-check text-white" style="font-size: 10px;"></i>
                                    </span>
                                    <span class="small" style="color: #334155;">Login akun pemegang sertifikat</span>
                                </li>
                                <li class="d-flex align-items-center gap-2 mb-3">
                                    <span class="rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 22px; height: 22px; background-color: #10b981;">
                                        <i class="fa fa-check text-white" style="font-size: 10px;"></i>
                                    </span>
                                    <span class="small" style="color: #334155;">Ajukan perpanjangan</span>
                                </li>
                                <li class="d-flex align-items-center gap-2 mb-3">
                                    <span class="rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 22px; height: 22px; background-color: #10b981;">
                                        <i class="fa fa-check text-white" style="font-size: 10px;"></i>
                                    </span>
                                    <span class="small" style="color: #334155;">Upload bukti pendukung</span>
                                </li>
                                <li class="d-flex align-items-center gap-2 mb-3">
                                    <span class="rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 22px; height: 22px; background-color: #10b981;">
                                        <i class="fa fa-check text-white" style="font-size: 10px;"></i>
                                    </span>
                                    <span class="small" style="color: #334155;">Evaluasi kompetensi</span>
                                </li>
                                <li class="d-flex align-items-center gap-2 mb-3">
                                    <span class="rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 22px; height: 22px; background-color: #10b981;">
                                        <i class="fa fa-check text-white" style="font-size: 10px;"></i>
                                    </span>
                                    <span class="small" style="color: #334155;">Sertifikat diperpanjang</span>
                                </li>
                                <li class="d-flex align-items-center gap-2">
                                    <span class="rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 22px; height: 22px; background-color: #10b981;">
                                        <i class="fa fa-check text-white" style="font-size: 10px;"></i>
                                    </span>
                                    <span class="small" style="color: #334155;">Status sertifikat diperbarui</span>
                                </li>
                            </ul>
                            
                            <a href="/pilih-level?type=recert" class="btn w-100 py-3 rounded-3 fw-bold d-flex align-items-center justify-content-center gap-2" style="background-color: #10b981; border-color: #10b981; color: white;">
                                <span>Pilih Level</span>
                                <i class="fa fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Meta Text / Contact Support -->
                <div class="row justify-content-center mt-5">
                    <div class="col-12 text-center">
                        <p class="text-muted mb-0">
                            Not sure which path to choose? 
                            <a href="/contactus" class="text-primary text-decoration-underline">Contact our support team</a> 
                            for guidance.
                        </p>
                    </div>
                </div>
            </div>
            
            <!-- JavaScript tidak diperlukan karena redirect ditangani oleh controller -->
        </section>
    </template>

    <!-- ========== REGISTER SNIPPET TO WEBSITE BUILDER ========== -->
    <template id="certification_path_snippet" inherit_id="website.snippets" name="Certification Path Snippet">
        <xpath expr="//snippets[@id='snippet_structure']" position="inside">
            <t t-snippet="iso17024_portall.s_certification_path" 
               t-thumbnail="/iso17024_portall/static/src/img/snippets/s_certification_path.png"/>
        </xpath>
    </template>
    
</odoo>
