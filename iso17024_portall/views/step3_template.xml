<odoo>
    <template id="application_step3_page" name="Pilih Skema">
        <t t-call="website.layout">
            
            <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1" rel="stylesheet"/>

            <style>
                :root {
                    --iso-navy: #0f172a;
                    --iso-gold: #d4af37;
                    --iso-gold-hover: #b5952f;
                }
                
                /* HEADER STYLE */
                .iso-header-box {
                    background-color: var(--iso-navy);
                    color: white;
                    padding: 3rem 2rem;
                    border-radius: 16px 16px 0 0;
                }
                .iso-body-box {
                    background-color: white;
                    padding: 2rem;
                    border-radius: 0 0 16px 16px;
                    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
                    min-height: 500px;
                }

                /* STEPPER STYLE */
                .step-container { display: flex; justify-content: space-between; position: relative; margin-bottom: 3rem; max-width: 600px; margin-left: auto; margin-right: auto; }
                .step-container::before { content: ''; position: absolute; top: 20px; left: 0; right: 0; height: 2px; background: #e2e8f0; z-index: 0; }
                .step-item { z-index: 1; text-align: center; background: white; padding: 0 10px; position: relative; }
                .step-circle { width: 40px; height: 40px; border-radius: 50%; background: #e2e8f0; color: #64748b; display: flex; align-items: center; justify-content: center; margin: 0 auto 8px; font-weight: bold; border: 3px solid white; box-shadow: 0 0 0 1px #e2e8f0; }
                .step-label { font-size: 0.8rem; color: #94a3b8; font-weight: 600; }

                /* Active and Completed States */
                .step-item.active .step-circle { background: var(--iso-gold); color: white; box-shadow: 0 0 0 4px rgba(212, 175, 55, 0.2); }
                .step-item.active .step-label { color: var(--iso-navy); }
                .step-item.completed .step-circle { background: var(--iso-navy); color: white; }
                .step-item.completed .step-label { color: var(--iso-navy); }

                /* RADIO CARD STYLE */
                .radio-card-label { cursor: pointer; display: block; height: 100%; }
                .radio-card-input { display: none; }
                
                .radio-card {
                    border: 1px solid #e2e8f0;
                    border-radius: 12px;
                    padding: 1.5rem;
                    background: white;
                    transition: all 0.2s;
                    height: 100%;
                    position: relative;
                }
                .radio-card:hover { border-color: #cbd5e1; }
                
                .radio-card-input:checked + .radio-card {
                    border-color: var(--iso-gold);
                    background-color: #fffdf5;
                    box-shadow: 0 0 0 2px var(--iso-gold);
                }
                .check-icon { display: none; color: var(--iso-gold); position: absolute; top: 15px; right: 15px; font-size: 1.5rem; }
                .radio-card-input:checked + .radio-card .check-icon { display: block; }

                /* COMPETENCY TABLE STYLE */
                .comp-section { display: none; animation: fadeIn 0.5s; }
                .comp-card { border: 1px solid #e2e8f0; border-radius: 8px; margin-bottom: 1rem; overflow: hidden; }
                .comp-header { background-color: #f8fafc; padding: 10px 15px; font-weight: bold; color: var(--iso-navy); border-bottom: 1px solid #e2e8f0; display: flex; justify-content: space-between; align-items: center;}
                .comp-body { padding: 15px; font-size: 0.9rem; color: #475569; }
                .comp-code { background: var(--iso-navy); color: white; padding: 2px 8px; border-radius: 4px; font-size: 0.75rem; margin-right: 10px; }
                
                /* Sidebar Summary */
                .sidebar-summary { position: sticky; top: 100px; border: 1px solid #e2e8f0; border-radius: 12px; overflow: hidden; background: #f8fafc; }
                
                .btn-iso-gold { background-color: var(--iso-gold); color: white; border-radius: 8px; padding: 12px 30px; font-weight: bold; border: none; width: 100%; box-shadow: 0 4px 6px -1px rgba(212, 175, 55, 0.4); }
                .btn-iso-gold:hover { background-color: var(--iso-gold-hover); color: white; transform: translateY(-1px); }
                .btn-iso-gold:disabled { background-color: #94a3b8; cursor: not-allowed; transform: none; box-shadow: none; }

                /* Error Alert */
                .error-alert {
                    background: linear-gradient(135deg, #fef2f2, #fee2e2);
                    border: 1px solid #fecaca;
                    border-left: 4px solid #dc2626;
                    border-radius: 8px;
                    padding: 1rem;
                    margin-bottom: 1.5rem;
                }
                
                /* ========== CUSTOM MODAL STYLE ========== */
                .custom-modal-overlay {
                    position: fixed;
                    top: 0; left: 0; right: 0; bottom: 0;
                    background: rgba(15, 23, 42, 0.6);
                    backdrop-filter: blur(4px);
                    z-index: 9999;
                    display: none;
                    align-items: center;
                    justify-content: center;
                    animation: fadeIn 0.2s ease;
                }
                .custom-modal-overlay.show { display: flex; }
                
                .custom-modal {
                    background: white;
                    border-radius: 16px;
                    max-width: 500px;
                    width: 90%;
                    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
                    animation: slideUp 0.3s ease;
                    overflow: hidden;
                }
                .custom-modal-header {
                    background: linear-gradient(135deg, #dc2626, #b91c1c);
                    color: white;
                    padding: 1.5rem;
                    text-align: center;
                }
                .custom-modal-header.warning {
                    background: linear-gradient(135deg, #f59e0b, #d97706);
                }
                .custom-modal-header .icon {
                    width: 60px; height: 60px;
                    background: rgba(255,255,255,0.2);
                    border-radius: 50%;
                    display: flex; align-items: center; justify-content: center;
                    margin: 0 auto 12px;
                    font-size: 32px;
                }
                .custom-modal-header h4 { margin: 0; font-weight: 700; }
                
                .custom-modal-body {
                    padding: 1.5rem;
                    max-height: 300px;
                    overflow-y: auto;
                }
                .custom-modal-body p { color: #64748b; margin-bottom: 1rem; }
                .missing-doc-list { list-style: none; padding: 0; margin: 0; }
                .missing-doc-list li {
                    display: flex;
                    align-items: center;
                    gap: 10px;
                    padding: 10px 12px;
                    background: #fef2f2;
                    border-left: 3px solid #dc2626;
                    margin-bottom: 8px;
                    border-radius: 0 8px 8px 0;
                    color: #991b1b;
                    font-size: 0.9rem;
                    font-weight: 500;
                }
                .missing-doc-list li .material-symbols-outlined {
                    font-size: 18px;
                    color: #dc2626;
                }
                
                .custom-modal-footer {
                    padding: 1rem 1.5rem 1.5rem;
                    display: flex;
                    gap: 10px;
                    justify-content: center;
                }
                .btn-close-modal {
                    background: var(--iso-navy);
                    color: white;
                    border: none;
                    padding: 12px 30px;
                    border-radius: 8px;
                    font-weight: 600;
                    cursor: pointer;
                    transition: all 0.2s;
                }
                .btn-close-modal:hover {
                    background: #1e293b;
                    transform: translateY(-1px);
                }
                .btn-back-upload {
                    background: #dc2626;
                    color: white;
                    border: none;
                    padding: 12px 30px;
                    border-radius: 8px;
                    font-weight: 600;
                    cursor: pointer;
                    transition: all 0.2s;
                    text-decoration: none;
                }
                .btn-back-upload:hover {
                    background: #b91c1c;
                    color: white;
                    transform: translateY(-1px);
                }
                
                @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
                @keyframes slideUp {
                    from { opacity: 0; transform: translateY(20px) scale(0.95); }
                    to { opacity: 1; transform: translateY(0) scale(1); }
                }
            </style>

            <div class="py-5" style="background-color: #f8fafc; min-height: 100vh;">
                <div class="container" style="max-width: 1100px;">
                    
                    <div class="iso-header-box text-center">
                        <h1 class="font-weight-bold mb-2">Pilihan Skema &amp; Kompetensi</h1>
                        <p class="mb-0 text-white-50">Pilih jenis sertifikasi dan pelajari unit kompetensi yang akan diujikan.</p>
                    </div>

                    <div class="iso-body-box">
                        
                        <!-- STEPPER -->
                        <div class="step-container">
                            <div class="step-item completed"><div class="step-circle"><i class="fa fa-check"></i></div><div class="step-label">Data Diri</div></div>
                            <div class="step-item completed"><div class="step-circle"><i class="fa fa-check"></i></div><div class="step-label">Upload</div></div>
                            <div class="step-item active"><div class="step-circle">3</div><div class="step-label">Skema</div></div>
                            <div class="step-item"><div class="step-circle">4</div><div class="step-label">Review</div></div>
                        </div>

                        <!-- ERROR MESSAGE FROM SERVER -->
                        <t t-if="request.params.get('error')">
                            <div class="error-alert">
                                <div class="d-flex align-items-start">
                                    <span class="material-symbols-outlined mr-2" style="color: #dc2626;">error</span>
                                    <div>
                                        <strong style="color: #991b1b;">Dokumen Belum Lengkap!</strong><br/>
                                        <span style="color: #b91c1c;" t-esc="request.params.get('error')"/><br/>
                                        <a href="/certification/apply/step2?edit=1" class="btn btn-sm btn-outline-danger mt-2">
                                            <i class="fa fa-arrow-left"></i> Kembali Upload Dokumen
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </t>

                        <form action="/certification/apply/step3/submit" method="post" id="formStep3" onsubmit="return validateStep3()">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                            
                            <!-- HIDDEN FIELDS: Status dokumen dari server -->
                            <input type="hidden" id="has_cert_level1" t-att-value="'1' if application.cert_level1_file else '0'"/>
                            <input type="hidden" id="has_previous_cert" t-att-value="'1' if application.previous_cert_file else '0'"/>
                            <input type="hidden" id="has_logbook" t-att-value="'1' if application.logbook_file else '0'"/>

                            <div class="row">
                                <div class="col-lg-8">
                                    
                                    <div class="mb-5">
                                        <h5 class="font-weight-bold mb-3" style="color: var(--iso-navy);">
                                            <span class="material-symbols-outlined align-middle mr-1 text-primary">assignment_ind</span> Jenis Permohonan
                                        </h5>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="radio-card-label">
                                                    <input type="radio" name="application_type" value="new" class="radio-card-input" 
                                                           t-att-checked="'checked' if application.application_type == 'new' else None"
                                                           onchange="onTypeChange('new')"/>
                                                    <div class="radio-card">
                                                        <i class="fa fa-check-circle check-icon"></i>
                                                        <h6 class="font-weight-bold mb-1">Sertifikasi Baru</h6>
                                                        <small class="text-muted">New Certification</small>
                                                    </div>
                                                </label>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="radio-card-label">
                                                    <input type="radio" name="application_type" value="recert" class="radio-card-input"
                                                           t-att-checked="'checked' if application.application_type == 'recert' else None"
                                                           onchange="onTypeChange('recert')"/>
                                                    <div class="radio-card">
                                                        <i class="fa fa-check-circle check-icon"></i>
                                                        <h6 class="font-weight-bold mb-1">Perpanjangan</h6>
                                                        <small class="text-muted">Resertifikasi / Renewal</small>
                                                        
                                                        <!-- Status dokumen resertifikasi -->
                                                        <div class="mt-2 small p-2 rounded" id="recert-doc-status">
                                                            <t t-if="not application.previous_cert_file or not application.logbook_file">
                                                                <span style="background-color: #fef2f2; color: #991b1b; display: block; padding: 6px 10px; border-radius: 6px;">
                                                                    <span class="material-symbols-outlined align-middle" style="font-size: 14px;">warning</span>
                                                                    Dokumen belum lengkap
                                                                </span>
                                                            </t>
                                                            <t t-else="">
                                                                <span style="background-color: #f0fdf4; color: #166534; display: block; padding: 6px 10px; border-radius: 6px;">
                                                                    <i class="fa fa-check"></i> Dokumen lengkap
                                                                </span>
                                                            </t>
                                                        </div>
                                                    </div>
                                                </label>
                                            </div>
                                        </div>
                                        <div id="recert_input" class="mt-2 p-3 rounded border" style="display: none; background-color: #fff7ed; border-color: #ffedd5 !important;">
                                            <label class="font-weight-bold small" style="color: #92400e;">Nomor Sertifikat Lama <span class="text-danger">*</span></label>
                                            <input type="text" name="previous_cert_number" class="form-control" 
                                                   t-att-value="application.previous_cert_number"
                                                   placeholder="Contoh: ISO-17024-CI-2022-001"/>
                                        </div>
                                    </div>

                                    <div class="mb-5">
                                        <h5 class="font-weight-bold mb-3" style="color: var(--iso-navy);">
                                            <span class="material-symbols-outlined align-middle mr-1 text-primary">workspace_premium</span> Pilih Skema Okupasi
                                        </h5>
                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label class="radio-card-label">
                                                    <input type="radio" name="scheme" value="level1" class="radio-card-input"
                                                           t-att-checked="'checked' if application.scheme == 'level1' else None"
                                                           onchange="onSchemeChange('level1')"/>
                                                    <div class="radio-card">
                                                        <i class="fa fa-check-circle check-icon"></i>
                                                        <span class="badge badge-light border mb-2">Basic Level</span>
                                                        <h5 class="font-weight-bold" style="color: var(--iso-navy);">Coating Inspector L1</h5>
                                                        <p class="small text-muted mt-1">Inspeksi Visual &amp; Pendataan</p>
                                                        <h5 class="mt-3 font-weight-bold" style="color: var(--iso-gold);">Rp 7.200.000</h5>
                                                    </div>
                                                </label>
                                            </div>
                                            <div class="col-md-6 mb-3">
                                                <label class="radio-card-label">
                                                    <input type="radio" name="scheme" value="level2" class="radio-card-input"
                                                           t-att-checked="'checked' if application.scheme == 'level2' else None"
                                                           onchange="onSchemeChange('level2')"/>
                                                    <div class="radio-card">
                                                        <i class="fa fa-check-circle check-icon"></i>
                                                        <span class="badge badge-warning text-white mb-2">Advanced</span>
                                                        <h5 class="font-weight-bold" style="color: var(--iso-navy);">Coating Inspector L2</h5>
                                                        <p class="small text-muted mt-1">Prosedur &amp; Analisis Kegagalan</p>
                                                        <h5 class="mt-3 font-weight-bold" style="color: var(--iso-gold);">Rp 13.600.000</h5>
                                                        
                                                        <!-- Status dokumen Level 2 -->
                                                        <div class="mt-2 small p-2 rounded" id="level2-doc-status">
                                                            <t t-if="not application.cert_level1_file">
                                                                <span style="background-color: #fef2f2; color: #991b1b; display: block; padding: 6px 10px; border-radius: 6px;">
                                                                    <span class="material-symbols-outlined align-middle" style="font-size: 14px;">warning</span>
                                                                    Sertifikat L1 belum diupload
                                                                </span>
                                                            </t>
                                                            <t t-else="">
                                                                <span style="background-color: #f0fdf4; color: #166534; display: block; padding: 6px 10px; border-radius: 6px;">
                                                                    <i class="fa fa-check"></i> Sertifikat L1 sudah diupload
                                                                </span>
                                                            </t>
                                                        </div>
                                                    </div>
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-4">
                                        <h5 class="font-weight-bold mb-3" style="color: var(--iso-navy);">
                                            <span class="material-symbols-outlined align-middle mr-1 text-primary">fact_check</span> Rincian Unit Kompetensi
                                        </h5>
                                        
                                        <div id="comp_level1" class="comp-section">
                                            <div class="comp-card">
                                                <div class="comp-header">
                                                    <span><span class="comp-code">UK.CT-L1.01</span> Pembersihan Permukaan (Surface Prep)</span>
                                                </div>
                                                <div class="comp-body">
                                                    <strong>Memeriksa dan melakukan pembersihan permukaan dengan alat dan bahan khusus.</strong>
                                                </div>
                                            </div>
                                            <div class="comp-card">
                                                <div class="comp-header">
                                                    <span><span class="comp-code">UK.CT-L1.02</span> Pra-Kualifikasi &amp; Pengujian</span>
                                                </div>
                                                <div class="comp-body">
                                                    <strong>Melakukan pra-kualifikasi dengan mempertimbangkan parameter standar.</strong>
                                                </div>
                                            </div>
                                            <div class="comp-card">
                                                <div class="comp-header">
                                                    <span><span class="comp-code">UK.CT-L1.03</span> Pelaksanaan Pelapisan (Coating Application)</span>
                                                </div>
                                                <div class="comp-body">
                                                    <strong>Melaksanakan pelapisan dengan beberapa alat dan bahan khusus.</strong>
                                                </div>
                                            </div>
                                            <div class="comp-card">
                                                <div class="comp-header">
                                                    <span><span class="comp-code">UK.CT-L1.04</span> Inspeksi Aplikasi Coating</span>
                                                </div>
                                                <div class="comp-body">
                                                    <strong>Melakukan inspeksi terhadap beberapa aspek aplikasi coating.</strong>
                                                </div>
                                            </div>
                                        </div>

                                        <div id="comp_level2" class="comp-section">
                                            <div class="comp-card">
                                                <div class="comp-header">
                                                    <span><span class="comp-code">UK.CT-L2.01</span> Spesifikasi Pekerjaan</span>
                                                </div>
                                                <div class="comp-body">
                                                    <strong>Membuat dan melakukan spesifikasi pekerjaan coating.</strong>
                                                </div>
                                            </div>
                                            <div class="comp-card">
                                                <div class="comp-header">
                                                    <span><span class="comp-code">UK.CT-L2.02</span> Pengujian Spesifikasi</span>
                                                </div>
                                                <div class="comp-body">
                                                    <strong>Melakukan pengujian bahan baku dan coating cair.</strong>
                                                </div>
                                            </div>
                                            <div class="comp-card">
                                                <div class="comp-header">
                                                    <span><span class="comp-code">UK.CT-L2.03</span> Pembuatan Prosedur</span>
                                                </div>
                                                <div class="comp-body">
                                                    <strong>Membuat prosedur pembuatan, pengujian, dan aplikasi coating.</strong>
                                                </div>
                                            </div>
                                            <div class="comp-card">
                                                <div class="comp-header">
                                                    <span><span class="comp-code">UK.CT-L2.04</span> Pelapisan Khusus &amp; Inspeksi Lanjut</span>
                                                </div>
                                                <div class="comp-body">
                                                    <strong>Melaksanakan pelapisan dan inspeksi dengan bahan khusus.</strong>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="mt-4">
                                            <a href="/certification/apply/step2?edit=1" class="btn btn-link text-muted pl-0 mt-3">
                                                <i class="fa fa-arrow-left"></i> Kembali ke Upload Dokumen
                                            </a>
                                        </div>

                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="sidebar-summary p-4">
                                        <h6 class="font-weight-bold text-uppercase text-muted mb-3" style="font-size: 0.75rem; letter-spacing: 1px;">Ringkasan Pilihan</h6>
                                        
                                        <div class="mb-4">
                                            <div class="d-flex align-items-center mb-2">
                                                <div style="width: 40px; height: 40px; background: #fffbeb; border-radius: 8px; display: flex; align-items: center; justify-content: center; margin-right: 12px;">
                                                    <span class="material-symbols-outlined text-warning">workspace_premium</span>
                                                </div>
                                                <div>
                                                    <h6 class="font-weight-bold m-0" id="summary-scheme" style="color: var(--iso-navy);">Pilih Skema</h6>
                                                    <small class="text-muted" id="summary-level">-</small>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="border-top pt-3 mb-3">
                                            <div class="d-flex justify-content-between mb-2 small text-muted">
                                                <span>Biaya Ujian</span>
                                                <span id="summary-exam">Rp 0</span>
                                            </div>
                                            <div class="d-flex justify-content-between mb-2 small text-muted">
                                                <span>Biaya Admin</span>
                                                <span>Rp 1.600.000</span>
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center mt-2">
                                                <span class="font-weight-bold text-dark">Total</span>
                                                <span class="h4 font-weight-bold m-0" style="color: var(--iso-gold);" id="summary-total">Rp 0</span>
                                            </div>
                                        </div>
                                        
                                        <!-- Warning area - akan diisi oleh JavaScript -->
                                        <div id="validation-warning" class="alert small p-2 mt-3 mb-3 border-0" style="display: none;">
                                        </div>

                                        <button type="submit" id="btnSubmit" class="btn btn-iso-gold shadow">
                                            Lanjut ke Review <i class="fa fa-arrow-right ml-2"></i>
                                        </button>
                                        <div class="text-center mt-3">
                                            <small class="text-muted" style="font-size: 0.7rem;">Langkah Selanjutnya: Review &amp; Deklarasi</small>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- ========== CUSTOM MODAL FOR VALIDATION ========== -->
            <div class="custom-modal-overlay" id="validationModal">
                <div class="custom-modal">
                    <div class="custom-modal-header" id="modalHeader">
                        <div class="icon">
                            <span class="material-symbols-outlined">error</span>
                        </div>
                        <h4 id="modalTitle">Dokumen Belum Lengkap</h4>
                    </div>
                    <div class="custom-modal-body">
                        <p id="modalMessage">Anda tidak dapat melanjutkan karena dokumen berikut belum diupload:</p>
                        <ul class="missing-doc-list" id="missingDocsList">
                            <!-- Filled by JavaScript -->
                        </ul>
                    </div>
                    <div class="custom-modal-footer">
                        <a href="/certification/apply/step2?edit=1" class="btn-back-upload">
                            <i class="fa fa-arrow-left"></i> Upload Dokumen
                        </a>
                        <button type="button" class="btn-close-modal" onclick="closeValidationModal()">
                            Tutup
                        </button>
                    </div>
                </div>
            </div>

            <script type="text/javascript">
                // ======== STATUS DOKUMEN (dari server) ========
                function hasCertLevel1() {
                    return document.getElementById('has_cert_level1').value === '1';
                }
                function hasPreviousCert() {
                    return document.getElementById('has_previous_cert').value === '1';
                }
                function hasLogbook() {
                    return document.getElementById('has_logbook').value === '1';
                }
                
                // ======== TOGGLE RECERT INPUT ========
                function toggleRecert(isRecert) {
                    var input = document.getElementById('recert_input');
                    input.style.display = isRecert ? 'block' : 'none';
                }
                
                // ======== ON TYPE CHANGE ========
                function onTypeChange(type) {
                    toggleRecert(type === 'recert');
                    validateSelection();
                }
                
                // ======== ON SCHEME CHANGE ========
                function onSchemeChange(scheme) {
                    updateScheme(scheme);
                    validateSelection();
                }

                // ======== UPDATE SCHEME DISPLAY ========
                function updateScheme(scheme) {
                    var label = scheme === 'level1' ? 'Coating Inspector L1' : 'Coating Inspector L2';
                    var level = scheme === 'level1' ? 'Basic Level' : 'Advanced Level';
                    var priceExam = scheme === 'level1' ? 7200000 : 13600000;
                    var adminFee = 1600000;
                    var total = priceExam + adminFee;
                    
                    function formatRupiah(num) {
                        return 'Rp ' + num.toString().replace(/\B(?=(\d{3})+(?!\d))/g, '.');
                    }
                    
                    document.getElementById('summary-scheme').innerText = label;
                    document.getElementById('summary-level').innerText = level;
                    document.getElementById('summary-exam').innerText = formatRupiah(priceExam);
                    document.getElementById('summary-total').innerText = formatRupiah(total);

                    document.getElementById('comp_level1').style.display = scheme === 'level1' ? 'block' : 'none';
                    document.getElementById('comp_level2').style.display = scheme === 'level2' ? 'block' : 'none';
                }
                
                // ======== VALIDATE SELECTION (realtime) ========
                function validateSelection() {
                    var missingDocs = getMissingDocs();
                    var warningDiv = document.getElementById('validation-warning');
                    var btnSubmit = document.getElementById('btnSubmit');
                    
                    if (missingDocs.length > 0) {
                        // Ada dokumen yang kurang
                        warningDiv.style.display = 'block';
                        warningDiv.style.backgroundColor = '#fef2f2';
                        warningDiv.style.color = '#991b1b';
                        warningDiv.innerHTML = '<span class="material-symbols-outlined align-middle mr-1" style="font-size: 16px;">warning</span><strong>Tidak dapat melanjutkan!</strong><br/><small>Dokumen: ' + missingDocs.join(', ') + ' belum diupload.</small>';
                        
                        btnSubmit.disabled = true;
                    } else {
                        // Semua dokumen lengkap
                        warningDiv.style.display = 'block';
                        warningDiv.style.backgroundColor = '#f0fdf4';
                        warningDiv.style.color = '#166534';
                        warningDiv.innerHTML = '<span class="material-symbols-outlined align-middle mr-1" style="font-size: 16px;">check_circle</span> Dokumen lengkap, siap melanjutkan.';
                        
                        btnSubmit.disabled = false;
                    }
                }
                
                // ======== GET MISSING DOCS ========
                function getMissingDocs() {
                    var missingDocs = [];
                    
                    // Cek pilihan scheme
                    var schemeRadio = document.querySelector('input[name="scheme"]:checked');
                    var typeRadio = document.querySelector('input[name="application_type"]:checked');
                    
                    if (schemeRadio &amp;&amp; schemeRadio.value === 'level2') {
                        if (!hasCertLevel1()) {
                            missingDocs.push('Sertifikat Level 1');
                        }
                    }
                    
                    if (typeRadio &amp;&amp; typeRadio.value === 'recert') {
                        if (!hasPreviousCert()) {
                            missingDocs.push('Sertifikat Lama');
                        }
                        if (!hasLogbook()) {
                            missingDocs.push('Logbook Surveillance');
                        }
                    }
                    
                    return missingDocs;
                }
                
                // ======== FORM VALIDATION (on submit) ========
                function validateStep3() {
                    var missingDocs = getMissingDocs();
                    
                    if (missingDocs.length > 0) {
                        showValidationModal(missingDocs);
                        return false; // Batalkan submit
                    }
                    
                    return true; // Lanjutkan submit
                }
                
                // ======== SHOW VALIDATION MODAL ========
                function showValidationModal(missingDocs) {
                    var listEl = document.getElementById('missingDocsList');
                    listEl.innerHTML = '';
                    
                    missingDocs.forEach(function(doc) {
                        var li = document.createElement('li');
                        li.innerHTML = '<span class="material-symbols-outlined">cancel</span>' + doc;
                        listEl.appendChild(li);
                    });
                    
                    document.getElementById('validationModal').classList.add('show');
                    document.body.style.overflow = 'hidden';
                }
                
                function closeValidationModal() {
                    document.getElementById('validationModal').classList.remove('show');
                    document.body.style.overflow = '';
                }
                
                document.getElementById('validationModal').addEventListener('click', function(e) {
                    if (e.target === this) {
                        closeValidationModal();
                    }
                });

                // ======== WINDOW ONLOAD ========
                window.onload = function() {
                    var radios = document.getElementsByName('scheme');
                    var selected = false;
                    for(var i=0; i &lt; radios.length; i++) {
                        if(radios[i].checked) { 
                            updateScheme(radios[i].value); 
                            selected = true; 
                        }
                    }
                    if(!selected) {
                        document.getElementById('comp_level1').style.display = 'none';
                        document.getElementById('comp_level2').style.display = 'none';
                    }
                    
                    var types = document.getElementsByName('application_type');
                    for(var i=0; i &lt; types.length; i++) {
                        if(types[i].checked) toggleRecert(types[i].value === 'recert');
                    }
                    
                    // Validasi awal
                    validateSelection();
                };
            </script>
        </t>
    </template>
