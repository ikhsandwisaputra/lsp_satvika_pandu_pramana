<odoo>
    <template id="custom_signup_page" name="Candidate Sign Up">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_text_block pt-5 pb-5" style="background-color: #f6f7f8; min-height: 80vh;">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-6 col-md-8">
                                <div class="bg-white rounded-4 shadow-sm overflow-hidden">
                                    <!-- Header with Selection Info -->
                                    <div class="p-4 text-white" style="background: linear-gradient(135deg, #137fec 0%, #0d6efd 100%);">
                                        <div class="text-center">
                                            <h3 class="fw-bold mb-2">Portal Kandidat Coating Inspector</h3>
                                            <p class="mb-0 opacity-75 small">Daftar akun untuk memulai sertifikasi Coating Inspector</p>
                                        </div>
                                    </div>
                                    
                                    <!-- Selection Info Banner -->
                                    <div class="bg-light border-bottom p-3">
                                        <div class="row g-2 text-center">
                                            <div class="col-6">
                                                <p class="text-muted small mb-1">Jenis Sertifikasi</p>
                                                <p class="fw-bold mb-0" style="color: #1e293b;">
                                                    <t t-if="cert_type == 'new'">
                                                        <i class="fa fa-graduation-cap me-1 text-primary"></i>Sertifikasi Baru
                                                    </t>
                                                    <t t-elif="cert_type == 'recert'">
                                                        <i class="fa fa-refresh me-1 text-success"></i>Resertifikasi
                                                    </t>
                                                    <t t-else="">
                                                        <i class="fa fa-graduation-cap me-1 text-primary"></i>Sertifikasi Baru
                                                    </t>
                                                </p>
                                            </div>
                                            <div class="col-6 border-start">
                                                <p class="text-muted small mb-1">Level</p>
                                                <p class="fw-bold mb-0" style="color: #1e293b;">
                                                    <t t-if="cert_level == 'level1'">Grade 1.0</t>
                                                    <t t-elif="cert_level == 'level2'">Grade 2.0</t>
                                                    <t t-else="">Grade 1.0</t>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="p-4">
                                        <t t-if="error">
                                            <div class="alert alert-danger d-flex align-items-center" role="alert">
                                                <i class="fa fa-exclamation-circle me-2"></i>
                                                <t t-esc="error"/>
                                            </div>
                                        </t>

                                        <form action="/certification/signup/submit" method="post">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                            <!-- Hidden fields untuk context -->
                                            <input type="hidden" name="cert_type" t-att-value="cert_type or 'new'"/>
                                            <input type="hidden" name="cert_level" t-att-value="cert_level or 'level1'"/>
                                            
                                            <div class="mb-3">
                                                <label class="form-label fw-semibold">
                                                    <i class="fa fa-user me-1 text-muted"></i>Nama Lengkap (Sesuai KTP)
                                                </label>
                                                <input type="text" name="name" class="form-control form-control-lg" required="required" placeholder="e.g. Budi Santoso"/>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <label class="form-label fw-semibold">
                                                    <i class="fa fa-envelope me-1 text-muted"></i>Email (Akan jadi Username)
                                                </label>
                                                <input type="email" name="email" class="form-control form-control-lg" required="required" placeholder="email@contoh.com"/>
                                            </div>
                                            
                                            <div class="mb-3">
                                                <label class="form-label fw-semibold">
                                                    <i class="fa fa-lock me-1 text-muted"></i>Password
                                                </label>
                                                <input type="password" name="password" class="form-control form-control-lg" required="required" placeholder="Minimal 8 karakter"/>
                                            </div>
                                            
                                            <div class="mb-4">
                                                <label class="form-label fw-semibold">
                                                    <i class="fa fa-lock me-1 text-muted"></i>Konfirmasi Password
                                                </label>
                                                <input type="password" name="confirm_password" class="form-control form-control-lg" required="required" placeholder="Ulangi password"/>
                                            </div>

                                            <button type="submit" class="btn btn-primary btn-lg w-100 py-3 fw-bold">
                                                <i class="fa fa-user-plus me-2"></i>DAFTAR SEKARANG
                                            </button>
                                        </form>

                                        <div class="text-center mt-4 pt-3 border-top">
                                            <p class="text-muted mb-0">
                                                Sudah punya akun? <a href="/web/login" class="text-primary fw-semibold">Login disini</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Info Note -->
                                <div class="text-center mt-4">
                                    <p class="text-muted small mb-0">
                                        <i class="fa fa-info-circle me-1"></i>
                                        Setelah mendaftar, akun Anda akan diverifikasi oleh admin dalam 1x24 Jam.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>