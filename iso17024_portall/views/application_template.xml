<odoo>
    <template id="application_wizard_page" name="Upload Berkas">
        <t t-call="website.layout">
            
            <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1" rel="stylesheet"/>

            <style>
                :root {
                    --iso-navy: #0f172a;
                    --iso-navy-light: #1e293b;
                    --iso-gold: #d4af37;
                    --iso-gold-hover: #b5952f;
                }

                .iso-bg-light { background-color: #f8fafc; }
                
                .iso-card {
                    border: none;
                    border-radius: 16px;
                    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
                    background: white;
                    overflow: hidden;
                }

                .iso-header {
                    background-color: var(--iso-navy);
                    color: white;
                    padding: 2rem;
                    position: relative;
                }
                
                /* User Info Card */
                .user-info-card {
                    background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
                    border: 1px solid #bae6fd;
                    border-radius: 12px;
                    padding: 1.5rem;
                    margin-bottom: 2rem;
                }
                .user-info-card .info-label {
                    font-size: 0.75rem;
                    color: #64748b;
                    text-transform: uppercase;
                    letter-spacing: 0.5px;
                    margin-bottom: 4px;
                }
                .user-info-card .info-value {
                    font-size: 1rem;
                    font-weight: 700;
                    color: var(--iso-navy);
                }
                .user-info-card .badge-level {
                    background: var(--iso-gold);
                    color: white;
                    padding: 6px 16px;
                    border-radius: 20px;
                    font-weight: 700;
                    font-size: 0.85rem;
                }
                
                /* Step Indicator Style - 2 Steps */
                .step-indicator {
                    display: flex;
                    justify-content: center;
                    gap: 80px;
                    margin-bottom: 2rem;
                    position: relative;
                }
                .step-indicator::before {
                    content: '';
                    position: absolute;
                    top: 15px;
                    left: 30%;
                    right: 30%;
                    height: 2px;
                    background: #e2e8f0;
                    z-index: 0;
                }
                .step-item {
                    z-index: 1;
                    text-align: center;
                    background: white;
                    padding: 0 10px;
                }
                .step-circle {
                    width: 32px;
                    height: 32px;
                    border-radius: 50%;
                    background: #e2e8f0;
                    color: #64748b;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    margin: 0 auto 8px;
                    font-weight: bold;
                    border: 2px solid white;
                }
                .step-item.active .step-circle {
                    background: var(--iso-gold);
                    color: white;
                    box-shadow: 0 0 0 4px rgba(212, 175, 55, 0.2);
                }
                .step-label {
                    font-size: 0.75rem;
                    color: #64748b;
                    font-weight: 600;
                }
                .step-item.active .step-label { color: var(--iso-navy); }

                /* UPLOAD BOX STYLE */
                .upload-group { margin-bottom: 1.5rem; }
                .upload-label { font-weight: 700; color: #1e293b; display: flex; align-items: center; gap: 0.5rem; font-size: 0.9rem; margin-bottom: 0.5rem; }
                
                .upload-box {
                    border: 2px dashed #cbd5e1;
                    border-radius: 12px;
                    background-color: #f8fafc;
                    height: 140px;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    justify-content: center;
                    cursor: pointer;
                    transition: all 0.3s;
                    position: relative;
                }
                .upload-box:hover {
                    border-color: var(--iso-gold);
                    background-color: #fffdf5;
                }
                .upload-box.has-file {
                    border-style: solid;
                    border-color: #10b981;
                    background-color: #ecfdf5;
                }
                .upload-icon { font-size: 36px; color: #94a3b8; margin-bottom: 0.5rem; }
                .upload-box.has-file .upload-icon { color: #10b981; }
                
                .upload-text { font-size: 0.85rem; font-weight: 600; color: #334155; }
                .upload-sub { font-size: 0.7rem; color: #64748b; }
                
                /* Hide Input */
                .file-input-hidden { position: absolute; width: 100%; height: 100%; opacity: 0; cursor: pointer; top:0; left:0; }

                /* Tags */
                .badge-required { background-color: #fee2e2; color: #dc2626; font-size: 0.65rem; padding: 2px 8px; border-radius: 99px; text-transform: uppercase; letter-spacing: 0.5px; border: 1px solid #fecaca; }
                .badge-level2 { background-color: #dcfce7; color: #166534; font-size: 0.65rem; padding: 2px 8px; border-radius: 99px; text-transform: uppercase; letter-spacing: 0.5px; border: 1px solid #bbf7d0; }

                /* Buttons */
                .btn-iso-gold {
                    background-color: var(--iso-gold);
                    color: white;
                    font-weight: 700;
                    padding: 12px 30px;
                    border-radius: 8px;
                    border: none;
                    transition: all 0.3s;
                }
                .btn-iso-gold:hover {
                    background-color: var(--iso-gold-hover);
                    transform: translateY(-2px);
                    box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
                    color: white;
                }
                
                /* Custom Modal */
                .custom-modal-overlay {
                    position: fixed;
                    top: 0; left: 0; right: 0; bottom: 0;
                    background: rgba(15, 23, 42, 0.6);
                    backdrop-filter: blur(4px);
                    z-index: 9999;
                    display: none;
                    align-items: center;
                    justify-content: center;
                }
                .custom-modal-overlay.show { display: flex; }
                .custom-modal {
                    background: white;
                    border-radius: 16px;
                    max-width: 480px;
                    width: 90%;
                    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
                    overflow: hidden;
                }
                .custom-modal-header {
                    background: linear-gradient(135deg, #dc2626, #b91c1c);
                    color: white;
                    padding: 1.5rem;
                    text-align: center;
                }
                .custom-modal-header .icon {
                    width: 60px; height: 60px;
                    background: rgba(255,255,255,0.2);
                    border-radius: 50%;
                    display: flex; align-items: center; justify-content: center;
                    margin: 0 auto 12px;
                    font-size: 32px;
                }
                .custom-modal-body { padding: 1.5rem; max-height: 300px; overflow-y: auto; }
                .custom-modal-body p { color: #64748b; margin-bottom: 1rem; }
                .missing-doc-list { list-style: none; padding: 0; margin: 0; }
                .missing-doc-list li {
                    display: flex; align-items: center; gap: 10px;
                    padding: 10px 12px;
                    background: #fef2f2;
                    border-left: 3px solid #dc2626;
                    margin-bottom: 8px;
                    border-radius: 0 8px 8px 0;
                    color: #991b1b;
                    font-size: 0.9rem;
                    font-weight: 500;
                }
                .custom-modal-footer { padding: 1rem 1.5rem 1.5rem; text-align: center; }
                .btn-close-modal {
                    background: var(--iso-navy);
                    color: white;
                    border: none;
                    padding: 12px 40px;
                    border-radius: 8px;
                    font-weight: 600;
                    cursor: pointer;
                }
            </style>

            <div class="iso-bg-light min-vh-100 py-5">
                <div class="container" style="max-width: 900px;">
                    
                    <form action="/certification/apply/step1/submit" method="post" enctype="multipart/form-data" id="formStep1" onsubmit="return validateStep1()">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        
                        <!-- Hidden flags for existing documents (used by JS validation) -->
                        <input type="hidden" id="has_pas_foto" t-att-value="'1' if application and application.pas_foto else '0'"/>
                        <input type="hidden" id="has_ktp_file" t-att-value="'1' if application and application.ktp_file else '0'"/>
                        <input type="hidden" id="has_cv_file" t-att-value="'1' if application and application.cv_file else '0'"/>
                        <input type="hidden" id="has_ijazah_file" t-att-value="'1' if application and application.ijazah_file else '0'"/>
                        <input type="hidden" id="has_cert_level1_file" t-att-value="'1' if application and application.cert_level1_file else '0'"/>

                        <div class="iso-card">
                            
                            <div class="iso-header">
                                <h2 class="mb-1 font-weight-bold">Pengajuan Sertifikasi</h2>
                                <p class="mb-0 text-white-50" style="font-size: 0.9rem;">
                                    Silakan lengkapi dokumen persyaratan sesuai level sertifikasi yang dipilih.
                                </p>
                            </div>

                            <div class="card-body p-4 p-md-5">
                                
                                <!-- STEP INDICATOR: 2 Steps -->
                                <div class="step-indicator">
                                    <div class="step-item active">
                                        <div class="step-circle">1</div>
                                        <div class="step-label">Upload Berkas</div>
                                    </div>
                                    <div class="step-item">
                                        <div class="step-circle">2</div>
                                        <div class="step-label">Review</div>
                                    </div>
                                </div>
                                
                                <!-- USER INFO CARD -->
                                <div class="user-info-card">
                                    <div class="row align-items-center">
                                        <div class="col-md-4 mb-3 mb-md-0">
                                            <div class="info-label">Nama Asesi</div>
                                            <div class="info-value"><t t-esc="user.name"/></div>
                                        </div>
                                        <div class="col-md-4 mb-3 mb-md-0">
                                            <div class="info-label">Nomor Registrasi</div>
                                            <div class="info-value">
                                                <t t-if="partner.registration_code">
                                                    <t t-esc="partner.registration_code"/>
                                                </t>
                                                <t t-else="">
                                                    <span class="text-muted">-</span>
                                                </t>
                                            </div>
                                        </div>
                                        <div class="col-md-4 text-md-right">
                                            <div class="info-label">Level Sertifikasi</div>
                                            <span class="badge-level">
                                                <t t-if="partner.pending_cert_level == 'level2'">Grade 2.0</t>
                                                <t t-else="">Grade 1.0</t>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- REVISION MODE ALERT -->
                                <t t-if="application and (application.revision_pas_foto or application.revision_ktp or application.revision_cv or application.revision_ijazah or application.revision_training or application.revision_cert_level1 or application.revision_previous_cert or application.revision_logbook)">
                                    <div class="alert border-0 shadow-sm mb-4" style="background: linear-gradient(135deg, #fef3c7 0%, #fed7aa 100%); border-left: 4px solid #f59e0b !important;">
                                        <div class="d-flex">
                                            <span class="material-symbols-outlined mr-3" style="color: #d97706; font-size: 28px;">sync_problem</span>
                                            <div>
                                                <strong style="color: #92400e;">‚ö†Ô∏è Mode Revisi Dokumen</strong><br/>
                                                <span style="color: #78350f;">Anda hanya perlu upload ulang dokumen yang ditandai. Dokumen lain yang sudah OK tidak perlu diupload ulang.</span>
                                                <ul class="mt-2 mb-0" style="color: #92400e; padding-left: 20px;">
                                                    <t t-if="application.revision_pas_foto"><li>‚ùå Pas Foto - perlu diupload ulang</li></t>
                                                    <t t-if="application.revision_ktp"><li>‚ùå KTP - perlu diupload ulang</li></t>
                                                    <t t-if="application.revision_cv"><li>‚ùå CV - perlu diupload ulang</li></t>
                                                    <t t-if="application.revision_ijazah"><li>‚ùå Ijazah - perlu diupload ulang</li></t>
                                                    <t t-if="application.revision_training"><li>‚ùå Sertifikat Pelatihan - perlu diupload ulang</li></t>
                                                    <t t-if="application.revision_cert_level1"><li>‚ùå Sertifikat Level 1 - perlu diupload ulang</li></t>
                                                    <t t-if="application.revision_previous_cert"><li>‚ùå Sertifikat Lama - perlu diupload ulang</li></t>
                                                    <t t-if="application.revision_logbook"><li>‚ùå Logbook Surveillance - perlu diupload ulang</li></t>
                                                </ul>
                                                <t t-if="application.admin_note">
                                                    <hr style="border-color: #fcd34d;"/>
                                                    <strong style="color: #92400e;">üìù Catatan Admin:</strong>
                                                    <p class="mb-0 mt-1" style="color: #78350f;" t-esc="application.admin_note"/>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </t>

                                <!-- ALERT INFO -->
                                <div class="alert alert-info border-0 shadow-sm mb-4" style="background-color: #f0f9ff; color: #0c4a6e;">
                                    <div class="d-flex">
                                        <span class="material-symbols-outlined mr-3">info</span>
                                        <div>
                                            <strong>Catatan Dokumen:</strong><br/>
                                            Format PDF/JPG. Maksimal 5MB per file. Pastikan dokumen terbaca dengan jelas.
                                        </div>
                                    </div>
                                </div>

                                <h5 class="font-weight-bold mb-4" style="color: var(--iso-navy);">
                                    <span class="material-symbols-outlined align-middle mr-1 text-primary">folder_shared</span> Dokumen Persyaratan
                                </h5>

                                <div class="row">
                                    <!-- Pas Foto -->
                                    <div class="col-md-6 upload-group">
                                        <div class="d-flex justify-content-between mb-2">
                                            <label class="upload-label"><span class="material-symbols-outlined" style="color:#64748b; font-size:18px;">account_box</span> Foto Background Merah 4√ó6</label>
                                            <span class="badge-required">Wajib</span>
                                        </div>
                                        <div class="upload-box" id="box-foto">
                                            <span class="material-symbols-outlined upload-icon">image</span>
                                            <div class="text-center">
                                                <div class="upload-text">Klik untuk upload Foto</div>
                                                <div class="upload-sub">JPG/PNG (Max 5MB)</div>
                                            </div>
                                            <input type="file" name="pas_foto" class="file-input-hidden" accept="image/*" onchange="updateBox(this, 'box-foto')"/>
                                        </div>
                                    </div>

                                    <!-- KTP -->
                                    <div class="col-md-6 upload-group">
                                        <div class="d-flex justify-content-between mb-2">
                                            <label class="upload-label"><span class="material-symbols-outlined" style="color:#64748b; font-size:18px;">badge</span> KTP</label>
                                            <span class="badge-required">Wajib</span>
                                        </div>
                                        <div class="upload-box" id="box-ktp">
                                            <span class="material-symbols-outlined upload-icon">cloud_upload</span>
                                            <div class="text-center">
                                                <div class="upload-text">Klik untuk upload KTP</div>
                                                <div class="upload-sub">PDF/JPG (Max 5MB)</div>
                                            </div>
                                            <input type="file" name="ktp_file" class="file-input-hidden" accept=".pdf,image/*" onchange="updateBox(this, 'box-ktp')"/>
                                        </div>
                                    </div>

                                    <!-- CV -->
                                    <div class="col-md-6 upload-group">
                                        <div class="d-flex justify-content-between mb-2">
                                            <label class="upload-label"><span class="material-symbols-outlined" style="color:#64748b; font-size:18px;">description</span> CV Terakhir</label>
                                            <span class="badge-required">Wajib</span>
                                        </div>
                                        <div class="upload-box" id="box-cv">
                                            <span class="material-symbols-outlined upload-icon">cloud_upload</span>
                                            <div class="text-center">
                                                <div class="upload-text">Klik untuk upload CV</div>
                                                <div class="upload-sub">PDF (Max 5MB)</div>
                                            </div>
                                            <input type="file" name="cv_file" class="file-input-hidden" accept=".pdf" onchange="updateBox(this, 'box-cv')"/>
                                        </div>
                                    </div>

                                    <!-- Ijazah -->
                                    <div class="col-md-6 upload-group">
                                        <div class="d-flex justify-content-between mb-2">
                                            <label class="upload-label"><span class="material-symbols-outlined" style="color:#64748b; font-size:18px;">school</span> Ijazah Terakhir</label>
                                            <span class="badge-required">Wajib</span>
                                        </div>
                                        <div class="upload-box" id="box-ijazah">
                                            <span class="material-symbols-outlined upload-icon">cloud_upload</span>
                                            <div class="text-center">
                                                <div class="upload-text">Klik untuk upload Ijazah</div>
                                                <div class="upload-sub">PDF (Max 5MB)</div>
                                            </div>
                                            <input type="file" name="ijazah_file" class="file-input-hidden" accept=".pdf" onchange="updateBox(this, 'box-ijazah')"/>
                                        </div>
                                    </div>

                                    <!-- Sertifikat Keahlian (Optional) -->
                                    <div class="col-md-6 upload-group">
                                        <div class="d-flex justify-content-between mb-2">
                                            <label class="upload-label"><span class="material-symbols-outlined" style="color:#64748b; font-size:18px;">workspace_premium</span> Sertifikat Keahlian Relevan</label>
                                            <span class="badge badge-secondary px-2" style="font-size: 0.65rem;">Opsional</span>
                                        </div>
                                        <div class="upload-box" id="box-training">
                                            <span class="material-symbols-outlined upload-icon">cloud_upload</span>
                                            <div class="text-center">
                                                <div class="upload-text">Klik untuk upload (jika ada)</div>
                                                <div class="upload-sub">PDF (Max 5MB)</div>
                                            </div>
                                            <input type="file" name="training_cert" class="file-input-hidden" accept=".pdf" onchange="updateBox(this, 'box-training')"/>
                                        </div>
                                    </div>

                                    <!-- Sertifikat Level 1 (Level 2 Only) -->
                                    <t t-if="partner.pending_cert_level == 'level2'">
                                        <div class="col-md-6 upload-group">
                                            <div class="d-flex justify-content-between mb-2">
                                                <label class="upload-label" style="color: #166534;"><span class="material-symbols-outlined" style="color:#166534; font-size:18px;">military_tech</span> Sertifikat Grade 1.0</label>
                                                <span class="badge-level2">Wajib Level 2</span>
                                            </div>
                                            <div class="upload-box" id="box-cert-l1" style="border-color: #86efac; background-color: #f0fdf4;">
                                                <span class="material-symbols-outlined upload-icon" style="color: #22c55e;">cloud_upload</span>
                                                <div class="text-center">
                                                    <div class="upload-text">Upload Sertifikat Grade 1.0</div>
                                                    <div class="upload-sub">PDF (Max 5MB)</div>
                                                </div>
                                                <input type="file" name="cert_level1_file" class="file-input-hidden" accept=".pdf" onchange="updateBox(this, 'box-cert-l1')"/>
                                            </div>
                                        </div>
                                    </t>
                                </div>

                                <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                                    <button type="button" class="btn btn-outline-secondary px-4 py-2" onclick="window.history.back()">
                                        Batal
                                    </button>
                                    <button type="submit" class="btn btn-iso-gold px-5">
                                        Lanjut ke Review <i class="fa fa-arrow-right ml-2"></i>
                                    </button>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- CUSTOM MODAL FOR VALIDATION -->
            <div class="custom-modal-overlay" id="validationModal">
                <div class="custom-modal">
                    <div class="custom-modal-header">
                        <div class="icon">
                            <span class="material-symbols-outlined">error</span>
                        </div>
                        <h4>Dokumen Belum Lengkap</h4>
                    </div>
                    <div class="custom-modal-body">
                        <p>Mohon lengkapi dokumen wajib berikut sebelum melanjutkan:</p>
                        <ul class="missing-doc-list" id="missingDocsList">
                            <!-- Filled by JavaScript -->
                        </ul>
                    </div>
                    <div class="custom-modal-footer">
                        <button type="button" class="btn-close-modal" onclick="closeValidationModal()">
                            <span class="material-symbols-outlined align-middle mr-1" style="font-size: 18px;">check_circle</span>
                            Mengerti, Saya Akan Lengkapi
                        </button>
                    </div>
                </div>
            </div>

            <script type="text/javascript">
                function updateBox(input, boxId) {
                    if (input.files &amp;&amp; input.files[0]) {
                        var box = document.getElementById(boxId);
                        var fileName = input.files[0].name;
                        
                        box.classList.add('has-file');
                        
                        var textElem = box.querySelector('.upload-text');
                        var subElem = box.querySelector('.upload-sub');
                        
                        textElem.innerText = fileName;
                        subElem.innerText = "File Terpilih - Klik untuk ganti";
                        subElem.classList.add('font-weight-bold', 'text-success');
                    }
                }
                
                function showValidationModal(missingDocs) {
                    var listEl = document.getElementById('missingDocsList');
                    listEl.innerHTML = '';
                    
                    missingDocs.forEach(function(doc) {
                        var li = document.createElement('li');
                        li.innerHTML = '<span class="material-symbols-outlined">cancel</span>' + doc;
                        listEl.appendChild(li);
                    });
                    
                    document.getElementById('validationModal').classList.add('show');
                    document.body.style.overflow = 'hidden';
                }
                
                function closeValidationModal() {
                    document.getElementById('validationModal').classList.remove('show');
                    document.body.style.overflow = '';
                }
                
                // Initialize: Mark upload boxes that already have files
                function initExistingFiles() {
                    var fileMapping = {
                        'pas_foto': 'box-foto',
                        'ktp_file': 'box-ktp',
                        'cv_file': 'box-cv',
                        'ijazah_file': 'box-ijazah',
                        'cert_level1_file': 'box-cert-l1'
                    };
                    
                    for (var fieldName in fileMapping) {
                        var hiddenInput = document.getElementById('has_' + fieldName);
                        var boxId = fileMapping[fieldName];
                        var box = document.getElementById(boxId);
                        
                        if (hiddenInput &amp;&amp; hiddenInput.value === '1' &amp;&amp; box) {
                            box.classList.add('has-file');
                            var textElem = box.querySelector('.upload-text');
                            var subElem = box.querySelector('.upload-sub');
                            if (textElem) textElem.innerText = '‚úÖ File sudah ada';
                            if (subElem) {
                                subElem.innerText = 'Klik untuk ganti (opsional)';
                                subElem.classList.add('text-success');
                            }
                        }
                    }
                }
                
                // Run on page load
                document.addEventListener('DOMContentLoaded', initExistingFiles);
                
                document.getElementById('validationModal').addEventListener('click', function(e) {
                    if (e.target === this) {
                        closeValidationModal();
                    }
                });
                
                function validateStep1() {
                    var missingDocs = [];
                    
                    // Helper function to check if document already exists in database
                    function hasExistingFile(fieldName) {
                        var hiddenInput = document.getElementById('has_' + fieldName);
                        return hiddenInput &amp;&amp; hiddenInput.value === '1';
                    }
                    
                    // Helper function to check if new file is selected
                    function hasNewFile(fieldName) {
                        var input = document.querySelector('input[name="' + fieldName + '"]');
                        return input &amp;&amp; input.files &amp;&amp; input.files.length &gt; 0;
                    }
                    
                    // Required fields for everyone
                    var requiredFields = [
                        { name: 'pas_foto', label: 'Foto Background Merah 4√ó6' },
                        { name: 'ktp_file', label: 'KTP' },
                        { name: 'cv_file', label: 'CV Terakhir' },
                        { name: 'ijazah_file', label: 'Ijazah Terakhir' }
                    ];
                    
                    // Check if Level 2 - add cert_level1_file requirement
                    var certL1Input = document.querySelector('input[name="cert_level1_file"]');
                    if (certL1Input) {
                        requiredFields.push({ name: 'cert_level1_file', label: 'Sertifikat Grade 1.0' });
                    }
                    
                    // Validate: Document is OK if it exists in DB OR user selected new file
                    requiredFields.forEach(function(field) {
                        var existsInDb = hasExistingFile(field.name);
                        var hasNewUpload = hasNewFile(field.name);
                        
                        // Missing = no file in DB AND no new file selected
                        if (!existsInDb &amp;&amp; !hasNewUpload) {
                            missingDocs.push(field.label);
                        }
                    });
                    
                    if (missingDocs.length &gt; 0) {
                        showValidationModal(missingDocs);
                        return false;
                    }
                    
                    return true;
                }
            </script>

        </t>
    </template>
